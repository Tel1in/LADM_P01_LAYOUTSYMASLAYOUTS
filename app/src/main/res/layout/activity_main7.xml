<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:id="@+id/imagen1"
        android:src="@drawable/guaya" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visita Guayabitos"
        android:textSize="40dp"
        android:id="@+id/guaya"
        android:layout_below="@id/imagen1"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum es simplemente el texto de relleno de las imprentas y archivos de texto. Lorem Ipsum ha sido el "
        android:textSize="20dp"
        android:textAlignment="gravity"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/guaya"
        android:textColor="@color/black"
        android:id="@+id/lorem"
        >
    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lorem"
        android:src="@drawable/cal">


    </ImageView>

</RelativeLayout>